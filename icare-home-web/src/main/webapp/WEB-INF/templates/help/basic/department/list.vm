#set($layout = "emptyLayout.vm")
#parse("sys_param.vm")

<table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <th>医院名称</th>
        <th>名称简拼</th>
        <th>类型</th>
        <th>创建时间</th>
        <th>操作</th>
    </tr>
    </thead>
    <tbody>
        #foreach($row in $pageInfo.list)
        <tr>
            <td>
                $!{row.name}
            </td>
            <td>
                $!{row.simplePinyin}
            </td>
            <td>
                $!{row.type}
            </td>
            <td>
                $!{date.format('yyyy-MM-dd', $!{row.createTime})}
            </td>
            <td>
                <a href="javascript:void(0)" class="btn_oper" src="$!{CONTEXT_PATH}/department/edit?id=$!{row.id}">修改</a>
                <a href="javascript:void(0)" class="delete" src="$!{CONTEXT_PATH}/department/delete?id=$!{row.id}">删除</a>
            </td>
        </tr>
        #end
    </tbody>
</table>
#pagination()

<script type="text/javascript">

    $(function() {
        $('.btn_oper').click(function() {
            location.href = $(this).attr('src') + '#basic-department';
        });

        // 删除
        $('.delete').click(function() {
            var flag = confirm('确认要删除科室');
            if(!flag) {
                return;
            }

            showMask();
            var url = $(this).attr('src');

            $.ajax({
               url : url,
               type: 'post',
                error : function (XMLHttpRequest, textStatus, errorThrown) {
                    hideMask();
                },
                success : function (data, textStatus) {
                    if(data.flag) {
                        hideMask();

                        location.reload();
                    } else {
                        hideMask();
                        alert(data.msg);
                    }
                }
            });
        });
    });
</script>